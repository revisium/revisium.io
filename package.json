{
  "name": "@revisium/revisium.io",
  "private": true,
  "version": "0.3.3",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "ts:check": "tsc --noEmit",
    "fsd:check": "npx steiger src",
    "preview": "vite preview",
    "gql:codegen": "graphql-codegen",
    "gql:codegen:download": "graphql-codegen --download",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.16.1",
    "@emotion/react": "^11.14.0",
    "framer-motion": "^11.0.14",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.6",
    "nanoid": "^5.1.5",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.22.3",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.16.1",
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "steiger": "^0.5.6",
    "typescript": "5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
